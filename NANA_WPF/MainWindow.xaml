        Title="NANA"
        Width="165"
        Height="150"
		IsCloseButtonEnabled="True"
		IsMinButtonEnabled="False"
		ResizeMode="NoResize"
		IsMaxRestoreButtonEnabled="False"
		WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
	<Grid>
		<TextBox x:Name="TB_ID" HorizontalAlignment="Left" Height="26" Margin="38,10,-3,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2"/>
		<TextBlock HorizontalAlignment="Left" Margin="10,15,0,0" TextWrapping="Wrap" Text="ID  :" VerticalAlignment="Top" Height="16" Width="23" Focusable="False"/>
		<TextBox x:Name="TB_PW" HorizontalAlignment="Left" Height="26" Margin="40,41,-3,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" Grid.ColumnSpan="2"/>
		<TextBlock HorizontalAlignment="Left" Margin="10,46,0,0" TextWrapping="Wrap" Text="PW :" VerticalAlignment="Top" Height="16" Width="26" Focusable="False"/>
		<Button x:Name="Btn_Login" Content="LOGIN" HorizontalAlignment="Left" Margin="-1,72,-6,0" VerticalAlignment="Top" Width="165" Height="49" Click="Btn_Login_Click"/>

	</Grid>
</mah:MetroWindow>
